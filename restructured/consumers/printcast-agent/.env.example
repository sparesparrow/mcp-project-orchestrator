# PrintCast Agent Environment Configuration
# Copy this file to .env and fill in your values

# ===== Core Settings =====
SERVER_NAME="PrintCast Agent"
SERVER_PORT=8000
DEBUG=false

# ===== Asterisk SIP Settings =====
ASTERISK_HOST=localhost
ASTERISK_PORT=5038
ASTERISK_USERNAME=admin
ASTERISK_PASSWORD=your_asterisk_password
ASTERISK_CONTEXT=printcast-ivr

# ===== ElevenLabs AI Settings =====
# Get your API key from https://elevenlabs.io/
ELEVENLABS_API_KEY=your_elevenlabs_api_key
ELEVENLABS_AGENT_ID=optional_agent_id
ELEVENLABS_VOICE_ID=21m00Tcm4TlvDq8ikWAM
ELEVENLABS_MODEL=eleven_multilingual_v2

# ===== Content Sources =====
# GitHub API token (optional, increases rate limits)
GITHUB_TOKEN=

# News API key from https://newsapi.org/
NEWS_API_KEY=

# RSS feeds (comma-separated)
RSS_FEEDS="https://news.ycombinator.com/rss,https://feeds.feedburner.com/TechCrunch/,https://www.reddit.com/r/programming/.rss"

# ===== Printing Settings =====
DEFAULT_PRINTER=default
CUPS_SERVER=localhost:631
PRINT_TEMP_DIR=/tmp/printcast

# ===== Delivery Settings =====
DEFAULT_CARRIER=post

# Sender address
SENDER_NAME=PrintCast
SENDER_STREET=Václavské náměstí 1
SENDER_CITY=Praha
SENDER_POSTAL_CODE=11000
SENDER_COUNTRY=CZ

# ===== Carrier API Keys =====
# Zásilkovna (Packeta) API
ZASILKOVNA_API_KEY=

# DPD API
DPD_API_KEY=

# PPL API
PPL_API_KEY=

# ===== AWS Settings (Optional) =====
AWS_REGION=eu-central-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
S3_BUCKET=